{
  "name": "@tyfons-lab/email-templates",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.tsx"
    },
    "./env": "./env.ts"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm with-env tsc",
    "dev": "pnpm with-env tsc --watch --preserveWatchOutput ",
    "clean": "rm -rf .turbo node_modules",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "dev:email": "pnpm with-env email dev --dir src --port 3001",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "0.10.1",
    "@react-email/components": "^0.0.17",
    "@react-email/render": "^0.0.13",
    "nodemailer": "^6.9.13",
    "react-email": "^2.1.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.23.7"
  },
  "devDependencies": {
    "@tyfons-lab/tsconfig": "workspace:*",
    "@types/nodemailer": "^6.4.15",
    "@tyfons-lab/tailwind-config": "workspace:*",
    "@types/node": "20.12.11",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "dotenv-cli": "7.4.2",
    "jiti": "1.21.0",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5"
  }
}