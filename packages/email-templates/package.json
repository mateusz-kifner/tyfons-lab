{
  "name": "@tyfons-lab/email-templates",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.tsx"
    },
    "./env": "./env.ts"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm with-env tsc",
    "dev": "pnpm with-env tsc --watch --preserveWatchOutput ",
    "clean": "rm -rf .turbo node_modules",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "dev:email": "pnpm with-env email dev --dir src --port 3001",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@react-email/components": "0.0.24",
    "@t3-oss/env-nextjs": "0.11.1",
    "nodemailer": "6.9.14",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-email": "3.0.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@tyfons-lab/tailwind-config": "workspace:*",
    "@tyfons-lab/tsconfig": "workspace:*",
    "@types/node": "20.16.3",
    "@types/nodemailer": "6.4.15",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "dotenv-cli": "7.4.2",
    "jiti": "1.21.6",
    "tailwindcss": "3.4.10",
    "typescript": "5.5.4"
  }
}
