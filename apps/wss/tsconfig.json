{
  "extends": "@tyfons-lab/tsconfig/base.json",
  "compilerOptions": {
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
