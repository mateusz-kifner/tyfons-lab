{
  "name": "@tyfons-lab/wss",
  "private": true,
  "version": "0.1.0",
  "license": "UNLICENSED",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "pnpm with-env pnpm build && pnpm with-env node ./dist/index.js",
    "build": "pnpm with-env tsc",
    "dev": "pnpm with-env tsx watch src/index.ts",
    "clean": "rm -rf .turbo node_modules",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@tyfons-lab/tsconfig": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/node": "20.14.2",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "tsx": "^4.15.4",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "ws": "^8.17.0"
  }
}
